	{include '../@block.latte', pageKeywords => $currentLink->getTitle()}

	<div class="myContent">
		<div id="page-content-wrapper">
			<div class="container-fluid">

				<div class="row">
					<div class="col-lg-12">
						{form litterApplicationDetailForm}
							<div class="prihlaska">
								<div class="prihlaska_top">
									{if $cID == 157}
										<img src="{$basePath|noescape}/images/logo-prihlaskaCKCHS.jpg" />
									{else}
										<img src="{$basePath|noescape}/images/logo-prihlaska.jpg" />
									{/if}
								</div>
								<div class="heading1">
                                        {=LITTER_APPLICATION_DETAIL_APPLICATION|upper}
                                        {=LITTER_APPLICATION_DETAIL_APPLICATION_COUNTER_PREFIX|upper}{input No}<br />
                                        {=$clubName|upper}                                
                                        <div style="font-weight: normal; text-align: left;">
                                            <br />
                                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                            <i>Kontaktní adresa:  <b>{=USER_TEXT_LITTER_APPLICATION_HANDLER_NAME}</b></i><br />
