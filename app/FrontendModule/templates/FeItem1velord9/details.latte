                                    &nbsp; &nbsp; &nbsp; &nbsp; Živě vrženo psů: {input kzapisuPsu}
                                    &nbsp; &nbsp; &nbsp; &nbsp; fen: {input kzapisuFen}
                                </div>

								<div class="clear"></div>
								&nbsp;<br />

                                <div class="itemFull">
									
									<table class="prihlaska_table" cellspacing="0" width="100%" border="1">
										<tr>
											<td align="center" class="rbold" style="width:2.3cm; vertical-align: top">
                                                <b>Číslo zápisu vyplní ČMKJ</b>
                                            </td>
											<td align="center" class="rbold" style="width:6.4cm; vertical-align: top">
                                                <b>Jméno štěněte (nejdříve psi, pak feny)</b>
                                            </td>
											<td align="center" style="width:2.7cm; vertical-align: top">
                                                <b>Pohlaví</b>
                                            </td>
											<td align="center" style="width:3cm; vertical-align: top">
                                                <b>Barva srsti</b>
                                            </td>
											<td align="center" style="width:4.6cm; vertical-align: top">
                                                <b>tetovací číslo / číslo čipu</b> <br /><small>pokud budete čipovat, můžete tetovací číslo přelepit</small
                                            </td>
										</tr>

										{for $i = 1; $i <= $puppiesLines; $i++}
											<tr id="tr{$i}">
												<td align="center" class="rbold h30" style="height:0.7cm">&nbsp;<!-- CZAP_{$i} --></td>
												<td align="center">{input "jmeno" . $i}</td>
												<td align="center">{input "pohlavi" . $i}</td>
												<td align="center">{input "barva" . $i}</td>
												<td align="center" class="rbold">{input "mikrocip" . $i}</td>
											</tr>
										{/for}

									</table><!--tp-->
								</div><br /><br />

                                <div class="itemFull">
                                    <table style="margin-left: 0;">
                                        <tr>
                                            <td></td>
                                            <td style="padding-left: 12px;">
