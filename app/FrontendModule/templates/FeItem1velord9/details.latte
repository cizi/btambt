	<script>
		$("#frm-litterApplicationDetailForm-otecDN").datetimepicker({
			format: 'yyyy-mm-dd',
			language: {$currentLang},
			autoclose: 1,
			todayHighlight: 1,
			startView: 2,
			minView: 2,
			forceParse: 0
		});

		$("#frm-litterApplicationDetailForm-matkaDN").datetimepicker({
